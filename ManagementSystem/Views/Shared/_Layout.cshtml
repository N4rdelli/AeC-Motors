<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="NavSideBar">
            <div class="NavSideBarLogo">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://placehold.co/50x50" alt="Icon" />
                    Motors
                </a>
            </div>
            <div class="NavSideBarLinks">
                <a asp-area="" asp-controller="Yards" asp-action="Index">
                    <img src="https://placehold.co/35" alt="Icon" />
                    Yards
                </a>
                <a asp-area="" asp-controller="Vehicles" asp-action="Index">
                    <img src="https://placehold.co/35" alt="Icon" />
                    Vehicles
                </a>
                <a asp-area="" asp-controller="Costumers" asp-action="Index">
                    <img src="https://placehold.co/35" alt="Icon" />
                    Costumers
                </a>
                <a asp-area="" asp-controller="Rentals" asp-action="Index">
                    <img src="https://placehold.co/35" alt="Icon" />
                    Rentals
                </a>
            </div>
            <div class="NavSideBarConfig">
                <img src="https://placehold.co/35" alt="Icon" />
                Configurations
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- <footer class="border-top footer text-muted">
         <div class="container">
             &copy; 2024 - ManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
         </div>
     </footer>-->

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
