@model IEnumerable<ManagementSystem.Models.Costumer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CostumerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostumerCPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostumerRG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostumerPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostumerEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CostumerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostumerCPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostumerRG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostumerPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostumerEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CostumerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CostumerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CostumerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
