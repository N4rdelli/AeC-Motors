@model ManagementSystem.Models.Rental

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RentalId" />
            <div class="form-group">
                <label asp-for="CostumerId" class="control-label"></label>
                <select asp-for="CostumerId" class="form-control" asp-items="ViewBag.CostumerId"></select>
                <span asp-validation-for="CostumerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalStart" class="control-label"></label>
                <input asp-for="RentalStart" class="form-control" />
                <span asp-validation-for="RentalStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalEnd" class="control-label"></label>
                <input asp-for="RentalEnd" class="form-control" />
                <span asp-validation-for="RentalEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalPrince" class="control-label"></label>
                <input asp-for="RentalPrince" class="form-control" />
                <span asp-validation-for="RentalPrince" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalDiscount" class="control-label"></label>
                <input asp-for="RentalDiscount" class="form-control" />
                <span asp-validation-for="RentalDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalStatus" class="control-label"></label>
                <input asp-for="RentalStatus" class="form-control" />
                <span asp-validation-for="RentalStatus" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RentalPaymentStatus" /> @Html.DisplayNameFor(model => model.RentalPaymentStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
